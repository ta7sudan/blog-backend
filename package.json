{
  "name": "blog-backend",
  "version": "0.1.0",
  "description": "blog backend",
  "main": "src/index.js",
  "scripts": {
    "start": "pm2 start --env production",
    "stop": "pm2 stop blog-backend",
    "dev": "cross-env NODE_ENV=development node src/index.js",
    "lint": "eslint src test",
    "format": "prettier --config .prettierrc.js --write src/**/*.js test/**/*.js",
    "inspect": "jsinspect src",
    "test": "nyc ava -v",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ta7sudan/blog-backend.git"
  },
  "keywords": [
    "blog",
    "backend",
    "fastify"
  ],
  "author": "ta7sudan",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ta7sudan/blog-backend/issues"
  },
  "homepage": "https://github.com/ta7sudan/blog-backend#readme",
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "ava": {
    "cache": true,
    "babel": false
  },
  "nyc": {
    "cache": true,
    "include": [
      "src/**/*.js"
    ]
  },
  "devDependencies": {
    "ava": "^1.2.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jsinspect": "^0.12.7",
    "lint-staged": "^8.1.1",
    "nyc": "^13.1.0",
    "prettier": "^1.16.3"
  },
  "dependencies": {
    "@sqorn/pg": "0.0.45",
    "dotenv-safe": "^6.1.0",
    "ejs": "^2.6.1",
    "fastify": "^2.0.0-rc.4",
    "fastify-cookie": "^2.1.5",
    "fastify-cors": "^2.0.1",
    "fastify-helmet": "^3.0.0",
    "fastify-jwt": "^0.9.1",
    "fastify-plugin": "^1.4.0",
    "fastify-postgres": "^1.3.2",
    "fastify-rate-limit": "^2.0.0",
    "fastify-redis": "^3.0.0",
    "fastify-static": "^2.1.0",
    "gd-bmp": "^1.2.4",
    "ioredis": "^4.5.1",
    "pg": "^7.8.0",
    "pino": "^5.11.1",
    "point-of-view": "^2.1.0",
    "uuid": "^3.3.2"
  }
}
